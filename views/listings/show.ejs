<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-3 mt-3 show-card">
    <h3>Listing Details </h3>
    </div>
    <div class="card col-6 offset-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
    <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b><br>
        <%= listing.description %> <br>
        &#8377;<%= Number(listing.price || 0).toLocaleString("en-IN") %>/Night
        <%= listing.location %><br>
        <%= listing.country %><br>
    </p>

  </div>
    </div>
    
    
    <div class="btns mt-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 ">Edit</a>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-3 edit-btn">Delete </button>
    </form> 
    </div>
    
    </div> 

