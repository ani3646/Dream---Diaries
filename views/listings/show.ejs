<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3><%= listing.title %> </h3>
    </div>
    <div class="card col-6 offset-3 border-0">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
    <div class="card-body">
    <p class="card-text">
        
        <%= listing.description %> <br>
        &#8377;<%= Number(listing.price || 0).toLocaleString("en-IN") %>/Night
        <%= listing.location %><br>
        <%= listing.country %><br>
    </p>

  </div>
    </div>
    
    
    <div class="btns mt-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 ">Edit</a>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-3 edit-btn">Delete </button>
    </form> 
    </div>
    <div class="col-8 offset-3 mb-3">
        <hr/>
        <h4>
            Review Page
        </h4>
        <form class="">
           <div class="mb-3 mt-3">
            <label for="rating" class="form-label ">Rating</label>
            <input type="range" max="5" id="rating"
             class="form-range"
            name="review[rating]" >
           </div> 
           <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]"
             id="comment" cols="30" 
             rows="5" 
             class="form-control"></textarea>
           </div>
           <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
    </div> 

